            card_view:cardCornerRadius="@dimen/card_album_radius">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Memory"
                    android:layout_margin="5dp"/>

                <Switch
                    android:layout_margin="5dp"
