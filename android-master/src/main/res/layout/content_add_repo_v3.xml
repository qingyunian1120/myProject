                            android:imeActionLabel="@string/Priority"
                            android:imeOptions="actionUnspecified"
                            android:inputType="text"
                            android:maxLines="1"
                            android:singleLine="true"
                            />

                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
